#!/bin/sh

set -e

if [ "$1" = "remove" ] || [ "$1" = "disappear" ] ; then
	update-alternatives --remove ceilometer-polling /usr/bin/python3-ceilometer-polling
	update-alternatives --remove ceilometer-agent-notification /usr/bin/python3-ceilometer-agent-notification
	update-alternatives --remove ceilometer-send-sample /usr/bin/python3-ceilometer-send-sample
	update-alternatives --remove ceilometer-upgrade /usr/bin/python3-ceilometer-upgrade
	update-alternatives --remove ceilometer-rootwrap /usr/bin/python3-ceilometer-rootwrap
fi

#DEBHELPER#

exit 0
